{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
  <header class="post-header">
    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
  </header>
  {{#if image}}
    <a href="{{url}}">
      <img class="post-image" src={{image}} />
    </a>
  {{/if}}
  <section class="post-excerpt">
    <p><a class="read-more" href="{{url}}">{{excerpt words="26"}} &raquo;</a></p>
  </section>
  <footer class="post-meta">
    {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
    {{author}}
    {{tags prefix=" on "}}
    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time><a class="comments" href="{{url}}#disqus_thread">Comments</a>
  </footer>
</article>
{{/foreach}}

